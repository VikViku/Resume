<section id="sec_contact">
<div class="container">
<h1><%= t("navigator.contact") %></h1>
  
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for contact do |f| %>
        <%= f.input :name, label: 'Vardas', placeholder: 'Siuntėjo vardas' %>
        <%= f.input :email, label: 'El. paštas', placeholder: 'vardas@email.lt' %>
        <%= f.input :text, label: 'Žinutė', placeholder: 'Tavo pasiūlymai ir užsakymai', input_html: { :style=> 'width: 70%;', :rows => 5 } %>
        <%= f.button :submit, t("navigator.contactme"), class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>

</section>