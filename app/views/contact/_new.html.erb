<section>
<div class="container">
<h1><%= t(:contact_me) %></h1>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for contact do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        </br>
        <%= f.label :email %>
        <%= f.email_field :email %>
        </br>
        <%= f.label :text %>
        <%= f.text_area :text %>
        </br>


        <%= f.submit "Contact Me", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</section>