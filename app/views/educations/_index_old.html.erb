<section id="sec_educat">

	<div class="container-fluid">
		<h1><%= t("navigator.education") %></h1>
		<ul class="timeline">
			<% @educations.each do |uni| %>
			<li class="<%= cycle("", "timeline-inverted") %>">
				<div class="timeline-badge success"><i class="fa fa-graduation-cap" aria-hidden="true"></i></div>
				<div class="timeline-panel">
					<h4><%= uni.university %></h4>
					<h5><%= uni.course %></h5>
					<h4><small class="text-muted"><%= uni.try(:started_at).try(:strftime, '%Y') %> - <%= uni.try(:graduated_at).try(:strftime, '%Y') %></small></h4>
			</li>
			<% end %>
			<li><div class="timeline-badge primary">Start</li>
			</div>
		</ul>
	</div>

</section>
