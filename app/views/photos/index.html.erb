<p id="notice"><%= notice %></p>

<h1>Photos</h1>
    
  <ul id="lightGallery">
    <% @photos.each do |photo| %>
      <li data-src='<%= photo.image.url %>'>
      <%= image_tag(photo.image.thumb('180x180#').url, alt: photo.image_name, class: 'img-thumbnail')%>
      </li>
    <% end %>
  </ul>
<br>

<% link_to 'New Photo', new_photo_path %>

